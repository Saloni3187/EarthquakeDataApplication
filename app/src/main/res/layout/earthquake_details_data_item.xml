<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@color/colorOrange"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/tv_src"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_weight="3"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_eqid"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_lat"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_lng"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_magnitude"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_depth"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:padding="@dimen/_table_data_padding"
                android:textColor="@color/colorWhite"
                />
            <TextView
                android:text=""
                android:layout_width="@dimen/_separator_line"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                />
    </LinearLayout>
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:padding="@dimen/_table_data_padding"
            android:layout_height="@dimen/_separator_line"
            android:background="@color/colorWhite"
            android:layout_below="@+id/ll_data"
            />

</RelativeLayout>